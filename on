    <script>
        const input = document.getElementById('searchInput');
        const text = "ai l√† ng∆∞·ªùi ƒë√°ng y√™u nh·∫•t Vi·ªát Nam?";
        let i = 0;

        // Auto typing effect
        window.onload = () => {
            function type() {
                if (i < text.length) {
                    input.value += text.charAt(i);
                    i++;
                    setTimeout(type, 100);
                }
            }
            setTimeout(type, 1000);
        };

        function showResults() {
            document.getElementById('searchPage').style.display = 'none';
            document.getElementById('resultsPage').style.display = 'block';
        }

        function feelingLucky() {
            alert("B·∫°n c·ª±c k·ª≥ may m·∫Øn khi ƒë∆∞·ª£c g·∫∑p t·ªõ! üòú");
            showResults();
        }

        function moveBtn() {
            const btn = document.getElementById('noBtn');
            btn.style.left = Math.random() * 200 + 'px';
            btn.style.top = Math.random() * -150 + 'px';
            btn.innerText = "Sai r·ªìi! üòú";
        }

        function celebrate() {
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 }
            });
            alert("Yay! H·∫πn g·∫∑p Thom v√†o cu·ªëi tu·∫ßn nh√©! üíå");
        }
